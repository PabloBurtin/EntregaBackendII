<div class="container mt-4">
  <h1 class="text-center">Productos Disponibles</h1>

  {{!-- Mostrar mensajes --}}
  {{#if query.success}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      {{query.success}}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  {{/if}}
  {{#if query.error}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      {{query.error}}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  {{/if}}

  {{#if user}}
  <div class="text-end mb-4">
   {{#if user.cartId}}
  <a href="/carts/{{user.cartId}}" class="btn btn-primary">
    <i class="bi bi-cart-fill"></i> Ver Mi Carrito
  </a>
  {{!-- Vaciar carrito --}}
  <button class="btn btn-warning me-2" onclick="productManager.emptyCart('{{user.cartId}}', true)">
    <i class="bi bi-trash"></i> Vaciar carrito
  </button>
  {{!-- Eliminar carrito --}}
  <button class="btn btn-danger" onclick="productManager.deleteCart('{{user.cartId}}', true)">
    <i class="bi bi-x-circle"></i> Eliminar carrito
  </button>
{{else}}
  <button class="btn btn-success" onclick="productManager.createCart()">
    <i class="bi bi-cart-plus"></i> Crear Carrito
  </button>
{{/if}}
  </div>
{{/if}}

  {{!-- Lista de productos --}}
  <div class="row">
    {{#each products}}
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">${{this.price}}</p>
            <p class="card-text"><small class="text-muted">{{this.category}}</small></p>
            <p class="card-text"><small>Stock: {{this.stock}}</small></p>

            {{#if user}}
            {{#if ../user.cartId}}
              <div class="quantity-selector d-flex align-items-center gap-2 mb-2">
                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="this.parentNode.querySelector('input').stepDown()">-</button>
                <input type="number" id="quantity-{{this._id}}" class="form-control form-control-sm" value="1" min="1" max="{{this.stock}}" style="width: 60px; text-align: center;">
                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="this.parentNode.querySelector('input').stepUp()">+</button>
              </div>
                <button type="button" class="btn btn-sm btn-primary" onclick="productManager.addToCart('{{../user.cartId}}', '{{this._id}}', '{{this._id}}')">Agregar al Carrito
                </button>
            {{else}}
                <button type="button" class="btn btn-sm btn-success" onclick="productManager.createCart()">
                <i class="bi bi-cart-plus"></i> Crear carrito para comprar
                </button>
            {{/if}}
            {{else}}
            <div class="alert alert-warning p-2">
              <small>Para comprar este producto, <a href="/login">Inicia sesión</a></small>
            </div>
            {{/if}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  {{!-- Paginación --}}
  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      {{#if hasPrevPage}}
        <li class="page-item">
          <a class="page-link" href="{{prevLink}}">Anterior</a>
        </li>
      {{/if}}
      <li class="page-item active">
        <span class="page-link">Página {{page}} de {{totalPages}}</span>
      </li>
      {{#if hasNextPage}}
        <li class="page-item">
          <a class="page-link" href="{{nextLink}}">Siguiente</a>
        </li>
      {{/if}}
    </ul>
  </nav>
</div>

<a href="/current" class="btn btn-primary me-2">Volver a index</a>

{{#if user}}
      <form method="GET" action="/logout" class="d-inline">
        <button type="submit" class="btn btn-outline-danger">Cerrar sesión</button>
      </form>
    {{else}}
      <div>
        <a href="/login" class="btn btn-primary me-2">Iniciar sesión</a>
        <a href="/register" class="btn btn-outline-primary">Registrarse</a>
      </div>
    {{/if}}
  </div>
</div>
{{#if user}}
<script src="/js/productManager.js"></script>
{{/if}}